#serve-CI
name: CI

on: [push]

jobs:

  build:
    name: Build
    runs-on: ubuntu-latest
    steps:
    - name: executing remote ssh commands using password
      uses: appleboy/ssh-action@master
      with:
        host: ${{ secrets.HOST }}
        username: ${{ secrets.USERNAME }}
        password: ${{ secrets.PASSWORD }}
        port: ${{ secrets.PORT }}
        script: |
            cd /home/bitrxcdev/github/bitrxc-server
            git pull
            docker-compose --env ./.env.dev down
            docker-compose --env ./.env.dev up --detach --build
